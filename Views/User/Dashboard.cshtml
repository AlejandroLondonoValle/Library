@model List<Library.Models.User>;

<div class="text-center">
    <h1 class="display-4">¡Estos son los Usuarios Registrados!</h1><br>

    @if (Model != null && Model.Any())
{
    <div class="d-flex flex-wrap justify-content-center gap-3">
        @foreach (var user in Model)
        {
            <div class="row">
            <div class="col">
                <table class="table table-striped mt-4">
                    <tbody>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nombres</th>
                            <th scope="col">Apellidos</th>
                            <th scope="col">Numero Documento</th>
                            <th scope="col">Direccion</th>
                            <th scope="col">Acciones</th>
                        </tr>
                        <tr class="align-middle">
                            <td>@User.Id</td>
                            <td>@User.Name</td>
                            <td>@User.LastName</td>
                            <td>@User.NumberDocument</td>
                            <td>@User.Address</td>
                            <td>
                                <div role="group">
                                    <a class="btn btn-warning" asp-controller="User" asp-action="UpdateUser" asp-route-id="@user.NumberDocument">Editar</a>
                                    <a class="btn btn-danger" asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.Id" onclick="confirmar()">Eliminar</a>
                                  
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        }
    </div>
}
else
{
    <p>No hay usuarios para mostrar.</p>
}

@section Scripts {
    <script>
        function confirmar()
        {
            return confirm("¿Estás seguro de Eliminar este user?");
        }
    </script>
}
 
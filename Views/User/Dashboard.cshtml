<div>
@model List<Library.Models.Book>;

<div class="text-center">
    <h1 class="display-4">Â¡Estos son los libros que puedes reservar!</h1><br>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>ISBN</th>
                        <th>Titulo</th>
                        <th>Autor</th>
                        <th>Categoria</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Id</td>
                            <td>@book.ISBN</td>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.Category</td>
                            <td>@book.State</td>
                            <td>
                                <a class="btn btn-success btn-sm" asp-controller="Loan" asp-action="NewLoan" asp-route-id="@book.ISBN">Reservar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No hay Libros para mostrar.</p>
    }
</div>
<div>
@model List<Library.Models.Book>;

<div class="text-center">
    <h1 class="display-4">¡Estos son los Libros de nuestra Biblioteca!</h1><br>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>ISBN</th>
                        <th>Titulo</th>
                        <th>Autor</th>
                        <th>Categoria</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Id</td>
                            <td>@book.ISBN</td>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.Category</td>
                            <td>@book.State</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No hay Libros para mostrar.</p>
    }

@section Scripts {
    <script>
        function confirmar() {
            return confirm("¿Estás seguro de Eliminar este book?");
        }
    </script>
}
</div>